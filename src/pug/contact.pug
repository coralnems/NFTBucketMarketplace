doctype html
html(lang="en", data-theme="dark")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/header.pug

        // Breadcrumb 
        .breadcrumb-wrapper
            .container
                .breadcrumb-content
                    h2.breadcrumb-title Contact
                    nav(aria-label="breadcrumb")
                        ol.breadcrumb.justify-content-center
                            li.breadcrumb-item
                                a(href="index.html") Home
                            li.breadcrumb-item.active(aria-current="page") Contact

        .divider

        // Contact Wrapper 
        .contact-wrapper
            .container
                .row.g-5.align-items-center
                    // Contact Form 
                    .col-12.col-lg-6
                        .contact-form
                            h1.mb-3 Let's talk about <br> all things!
                            p.mb-5 Write to us or give us a call. We will reply to you as soon as possible. But yes, it can take up to 24 hours.

                            form(action="#" method="POST")
                                .row.g-4
                                    .col-12
                                        input.form-control#name(type="text", placeholder="Full Name", value="", name="name", required)

                                    .col-12
                                        input.form-control#email(type="email", placeholder="Email Address", name="email", value="", required)

                                    .col-12
                                        input.form-control#topics(type="text", placeholder="Questions", name="topics", value="")

                                    .col-12
                                        textarea.form-control#message(name="message", placeholder="Write in details")

                                    .col-12
                                        button.btn.btn-primary.rounded-pill(type="submit") Send now
                
                    // Google Maps 
                    .col-12.col-lg-6
                        .maps-wrap
                            iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14047.882048906753!2d-0.14268817855593444!3d51.50701170390822!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C%20UK!5e0!3m2!1sen!2sbd!4v1570696571917!5m2!1sen!2sbd" allowfullscreen="")

        .divider

        include inc/dark-light-mode.pug

        include inc/footer.pug

        include inc/js-plugins.pug