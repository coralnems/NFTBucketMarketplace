                                        a.dropdown-item(href="#", data-bs-toggle="modal", data-bs-target="#shareModal")
                                            i.me-1.bi.bi-share
                                            | Share
                                    li
                                        a.dropdown-item(href="#", data-bs-toggle="modal", data-bs-target="#copylinkModal")
                                            i.me-1.bi.bi-box-arrow-up-right
                                            | Copy Link
                                    li
                                        a.dropdown-item(href="#", data-bs-toggle="modal", data-bs-target="#reportModal")
