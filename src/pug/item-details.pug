                            a.mx-2(href="#")
                                img(src="img/core-img/icons8-twitter.svg", alt="")
                            a.mx-2(href="#")
                                img(src="img/core-img/icons8-instagram.svg", alt="")
                            a.mx-2(href="#")
                                img(src="img/core-img/icons8-slack.svg", alt="")
                            a.mx-2(href="#")
                                img(src="img/core-img/icons8-player.svg", alt="")

                        button.btn.btn-danger.btn-sm.rounded-pill.mt-4(type="button", data-bs-dismiss="modal", aria-label="Close")
                            i.me-1.bi.bi-x-lg
                            | Close

        // Copy Link Modal 
        .share-modal.modal.fade#copylinkModal(tabindex="-1", aria-labelledby="copylinkLabel", aria-hidden="true")
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-body.p-4.text-center
                        h4.mb-4#copylinkLabel Copy item link

                        p.user-select-all.mb-0.border.border-2.p-3.rounded https://themeforest.net/item/affan-pwa-mobile-html-template/29715548

                        button.btn.btn-danger.btn-sm.rounded-pill.mt-4(type="button", data-bs-dismiss="modal", aria-label="Close")
                            i.me-1.bi.bi-x-lg
                            | Close

        // Report Modal 
        .share-modal.modal.fade#reportModal(tabindex="-1", aria-labelledby="reportModalLabel", aria-hidden="true")
            .modal-dialog.modal-dialog-centered
                .modal-content
                    .modal-body.p-4.text-center
                        h4.mb-4#reportModalLabel Why are you reporting?

                        form(action="#")
                            textarea.form-control.mb-3#reportText(name="reportMessage", placeholder="Write your complaint...")

                            .d-flex.align-items-center.justify-content-between
                                button.btn.btn-danger.btn-sm.rounded-pill(type="button", data-bs-dismiss="modal", aria-label="Close")
                                    i.me-1.bi.bi-x-lg
                                    | Close
                                button.btn.btn-primary.btn-sm.rounded-pill(type="submit") Report

        // Item Details 
        .item-details-wrap
            .container
                .row.g-4.g-lg-5.justify-content-center
                    .col-12.col-md-12.col-lg-6
                        .item-big-thumb
                            img(src="img/bg-img/4.jpg", alt="", data-action="zoom")

                    // Item Details Content 
                    .col-12.col-md-9.col-lg-6
                        .item-details-content.mt-5.mt-lg-0
                            .dropdown.item-details-dd
                                button.dropdown-toggle#dwd987(type="button", data-bs-toggle="dropdown", aria-expanded="false")
                                    i.bi.bi-three-dots-vertical

                                // Dropdown Menu 
                                ul.dropdown-menu.dropdown-menu-end(aria-labelledby="dwd987")
