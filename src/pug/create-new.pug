doctype html
html(lang="en", data-theme="dark")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/header.pug

        // Breadcrumb 
        .breadcrumb-wrapper
            .container
                .breadcrumb-content
                    h2.breadcrumb-title Create New
                    nav(aria-label="breadcrumb")
                        ol.breadcrumb.justify-content-center
                            li.breadcrumb-item
                                a(href="index.html") Home
                            li.breadcrumb-item.active(aria-current="page") Create

        .divider

        .create-new-wrapper
            .container
                .row.g-5.justify-content-center
                    .col-12.col-lg-8
                        // Create New Form 
                        .create-new-form.border.shadow-sm.p-4.p-sm-5
                            h2.mb-4 Create new NFT

                            form(action="#")
                                .row.align-items-center
                                    .col-12
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="formFileMultiple") Upload Files
                                            input.form-control.bg-transparent#formFileMultiple(type="file", multiple)

                                    .col-12
                                        .form-group.mb-4
                                            .form-check.form-check-inline
                                                input.form-check-input#inlineRadio1(type="radio", name="inlineRadioOptions", value="option1", checked)
                                                label.form-check-label(for="inlineRadio1") Fixed price

                                            .form-check.form-check-inline
                                                input.form-check-input#inlineRadio2(type="radio", name="inlineRadioOptions", value="option2")
                                                label.form-check-label(for="inlineRadio2") Unlock Purchased

                                            .form-check.form-check-inline
                                                input.form-check-input#inlineRadio3(type="radio", name="inlineRadioOptions", value="option3")
                                                label.form-check-label(for="inlineRadio3") Open for bids

                                    .col-12
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="title") Title
                                            input.form-control#title(type="text", placeholder="Macaw Bird")

                                    .col-12
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="description") Description
                                            input.form-control#description(type="text", placeholder="Write short description")

                                    .col-12.col-md-6
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="price") Price
                                            input.form-control#price(type="text", placeholder="0.324 ETH")

                                    .col-12.col-md-6
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="catagories") Catagory
                                            select.filter-select2.border.border-2.w-100.mb-4#catagories
                                                option(selected, value="1") Art
                                                option(value="2") Cards
                                                option(value="3") Collectibles
                                                option(value="4") Domain
                                                option(value="5") Music
                                                option(value="6") Memes
                                                option(value="7") Photos
                                                option(value="8") Sports
                                                option(value="9") Videos
                                                option(value="10") Vitual Worlds

                                    .col-12.col-sm-6
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="startingDate") Starting Date
                                            input.form-control#startingDate(type="date")

                                    .col-12.col-sm-6
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="endingDate") Ending Date
                                            input.form-control#endingDate(type="date")

                                    .col-12.col-lg-4
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="royality") Royality
                                            input.form-control#royality(type="text", placeholder="5%")

                                    .col-12.col-sm-6.col-lg-4
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="noOfcopies") No of copies
                                            input.form-control#noOfcopies(type="text", placeholder="13")

                                    .col-12.col-sm-6.col-lg-4
                                        .form-group.mb-4
                                            label.mb-2.fz-16(for="size") Size
                                            input.form-control#size(type="text", placeholder="20MB")

                                    .col-12.col-md-8
                                        .form-check.mb-4.mb-md-0
                                            input.form-check-input#rememberMe(type="checkbox", value="", checked)
                                            label.form-check-label(for="rememberMe") I agree to all terms &amp; conditions.

                                    .col-12.col-md-4
                                        button.btn.btn-primary.rounded-pill.w-100(type="submit") Create

                    .col-12.col-sm-8.col-lg-4
                        // Preview Card 
                        .nft-card.card.shadow-sm
                            .card-body
                                .img-wrap
                                    img(src="img/bg-img/17.jpg", alt="")

                                    // Badge 
                                    .badge.bg-dark.position-absolute
                                        img(src="img/core-img/fire.png", alt="")
                                        | Hot bid

                                // Others Info 
                                .row.gx-2.align-items-center.mt-3
                                    .col-8
                                        span.d-block.fz-12
                                            i.bi.bi-arrow-up
                                            | Hightest bid 0.324 ETH
                                    .col-4.text-end
                                        button.wishlist-btn(type="button")
                                            i.bi

                                // Meta Info 
                                .row.gx-2.align-items-center.mt-2
                                    .col-8
                                        .name-info.d-flex.align-items-center
                                            .author-img.position-relative
                                                img.shadow(src="img/bg-img/u1.jpg", alt="")
                                                i.bi.bi-check.position-absolute.bg-success
                                            .name-author
                                                a.name.d-block.hover-primary.fw-bold.text-truncate(href="item-details.html", data-bs-toggle="tooltip", data-bs-placement="top", title="Macaw Bird") Macaw Bird
                                                a.author.d-block.fz-12.hover-primary.text-truncate(href="author.html") @creative_art
                                    .col-4
                                        .price.text-end
                                            span.fz-12.d-block Current Bid
                                            h6.mb-0 0.324 ETH

                                // Button 
                                .row.gx-2.align-items-center.mt-3
                                    .col-6
                                        a.btn.btn-primary.btn-sm.rounded-pill(href="#") Place bid
                                    .col-6.text-end
                                        a.btn.btn-minimal.btn-sm.hover-primary(href="activity.html") 
                                            i.bi.bi-activity.me-1
                                            | Activity

                        h5.mb-0.mt-3.text-center
                            i.bi.bi-eye.me-1
                            | Live Preview

        .divider

        include inc/dark-light-mode.pug

        include inc/footer.pug

        include inc/js-plugins.pug