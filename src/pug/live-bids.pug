doctype html
html(lang="en", data-theme="dark")
    head
        include inc/head.pug

    body
        include inc/loader.pug

        include inc/admin-header.pug

        // Admin Sidebar Wrap 
        .admin-sidebar-wrap
            .overflowY-scroll
                // User Profile 
                .user-profile
                    // User Name 
                    .user-name.mb-5
                        .d-flex.align-items-center
                            img(src="img/bg-img/u2.jpg", alt="")
                            div.ms-3
                                h6.lh-1.text-dark.fz-18 Designing W.
                                span.badge.bg-primary.fz-12 Premium User

                    // Balance 
                    .card.shadow.mb-5
                        .card-body.text-center.p-4
                            h6.mb-1 Your current balance
                            h5.mb-0.text-dark.d-flex.align-items-center.justify-content-center
                                img.me-1(src="img/core-img/ethereum.png", alt="")
                                span.counter 4.09685
                                span.ms-2 ETH
                            a.btn.btn-warning.rounded-pill.btn-sm.w-100.mt-3(href="#") Recharge

                // Sidenav 
                .sidenav
                    ul
                        li Menu
                        li
                            a(href="dashboard.html")
                                i.bi.bi-speedometer
                                | Dashboard
                        li
                            a.active(href="live-bids.html")
                                i.bi.bi-hammer
                                | Live Bids
                        li
                            a(href="my-collection.html")
                                i.bi.bi-columns-gap
                                | My Collections
                        li
                            a(href="my-wallet.html")
                                i.bi.bi-wallet2
                                | My Wallet
                        li
                            a(href="notifications.html")
                                i.bi.bi-bell
                                | Notification
                        li
                            a(href="settings.html")
                                i.bi.bi-gear
                                | Settings

                .mt-auto
                    .mt-5
                    // Mode Switching 
                    .dark-light-mode
                        input#darkLightSwitch(type="checkbox")
                        label.shadow(for="darkLightSwitch") Toggle
                    
                    .copywrite-text.mt-4
                        p.mb-0.fz-14
                            | 2022 &copy; All rights reserved by 
                            a.fz-14(href="#", target="_blank") Designing World

        include inc/live-bids-content.pug

        include inc/js-plugins.pug